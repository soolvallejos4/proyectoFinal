        try{
            
             
            const res = await fetch('/contacto',{
                method: "POST",
                body: JSON.stringify({name, email,cel,msj}),
                headers: {'Content-Type': 'application/json'}
            })
            const data = await res.json()
            console.log(data)
        }catch(err){
            console.log(err)
        }


    })

</script>